
<%- include('templates/header.ejs') %>

<!-- Header Section -->

  <% if(msg){ %>
    <div class="alert alert-success alert-dismissible fade show" id="alertMsg" role="alert">
         <h5><%= msg %></h5>
        <button type="button"  class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true" >&times;</span>
        </button>
      </div>
  <% } %>

<header class="d-flex justify-content-center align-items-center text-center ">
  <div class="container-fluid">
      <div class="row">
        <div class="col-sm-10 offset-sm-1">
         
          <h1 class="display-4 text-uppercase glow text-light" id="farukPort">Faruk Portfolio</h1>
          <p class="lead text-light glow" id="motto" >Nothing is impossible</p>
            <a href="https://github.com/FarukHossain2133" target="_blank" class="btn btn-outline-light " id="btnHead">Read More</a>
        </div>
      </div>
  </div>
</header>

<main class="pt-5">
    <!-- Biodata Section -->
    <%- include('templates/biodata.ejs') %>

    <!--Projects Section -->
    <div class="container-fluid" style="margin-bottom: 30px" id="projectSection">
      <div class="" >
        <div class="col-md-6 offset-md-3  projectHeader">
            <h2>My All Project</h2>  
            <p>Please hover or click to show projects details</p>        
        </div>
       
    <div class="row d-flex justify-content-center align-items-center">

        <% if(projects.length > 0){ 
            projects.forEach(function(project, index){ %>
    
          <div class="col-md-6 col-lg-6 col-xl-4 text-center my-3 ">
              <div class="card bg-dark text-white cardHover boxShadow">
                  <img  src="/uploads/<%= project.picture %>" class="card-img cardImg" alt="faruk gigs">
                  <div class="card-img-overlay text-center d-flex justify-content-center align-items-center flex-column cardOverlay">
                    <h5 class="card-title text-center text-uppercase"><%= project.title %></h5>
                   
                    <div class="d-flex justify-content-center align-items-center flex-column" style="bottom: 0">
                      <a href="<%= project.heroku %>" target="_blank" class="btn btn-sm btn-light mt-2 text-uppercase" >
                        show live project
                      </a>
                      <% if(project.github !== "#") { %>
                          <a href="<%= project.github %>" target="_blank" class="btn btn-light btn-sm mt-2 text-uppercase" >
                              show github source code
                        </a>      
                      <% } %>
                    </div>
                    <button type="button" class="btn btn-sm btn-light mt-2 text-uppercase" data-toggle="tooltip" data-placement="bottom" title="<%= project.languages %>">
                       used languages
                    </button>
                  </div>
              </div>
        </div>
        <% }) } %>
       
        </div>
      </div>
    </div>
    
              <!-- Form Started -->
            <div class="container-fluid"  >
              <div class="jumbotron bg-color" id="contactSection" style="padding-top: -20px">
                <div class="row">
                  <div class=" col-md-6 offset-md-3 contactHeader " >
                      <h3 class=" text-uppercase">Contact Form</h3> 
                      <p >You can email me or contact any way</p>
                  </div>
                  <div class="col-md-6 p-3 my-3" style=" border: 1px solid white; border-radius: 5px;">
                    <div class="panel panel-danger">
                      <div class="panel-body">
                        <form id="reused_form" method="POST" action="/">
                          <div class="form-group">
                            <label><i class="fa fa-user" aria-hidden="true"></i> Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter Your Name" required>
                          </div>
                          <div class="form-group">
                            <label><i class="fa fa-envelope" aria-hidden="true"></i> Email</label>
                            <input type="email" name="email" class="form-control" placeholder="Enter Your Email" required>
                          </div>
                          <div class="form-group">
                            <label><i class="fa fa-user" aria-hidden="true"></i> Subject</label>
                            <input type="text" name="subject" class="form-control" placeholder="Enter Your Subject" required>
                          </div>
                          <div class="form-group">
                            <label><i class="fa fa-comment" aria-hidden="true"></i> Message</label>
                            <textarea rows="3" name="message" class="form-control" placeholder="Type Your Message" required></textarea>
                          </div>

                          <div class="form-group">
                            <button class="btn btn-raised btn-block btn-light">Send â†’</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 p-3 my-3" style="border: 1px solid white; border-radius: 5px;" >
                      <div class="mapouter">
                        <div class="gmap_canvas">
                            <iframe width="100%" height="100%" id="gmap_canvas" src="https://maps.google.com/maps?q=jessore%20Bangladesh&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                            </iframe>
                            <a href="#">Faruk Hossain</a>
                        </div>
                      </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Form Ended -->
        
</main>




<%- include('templates/footer.ejs') %>

